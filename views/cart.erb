<h2>Your cart:</h2>


<table class="table" style="background: #6b8e23;">
  <thead>
    <tr style="background: #ff8c00;">
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Qty</th>

    </tr>
  </thead>
  <tbody>
  	<% total_price = 0%>
  	<% total_qty = 0 %>
  	<% @items.each do |item| %>

    <tr>
     	<td><%= item[0].title %></td>
      <td><%= item[0].price %></td>    
      <td><%= item[1] %></td>
 	 </tr>
 	<% total_price += item[0].price * item[1].to_i  %> 
 	<% total_qty += item[1].to_i  %> 
    <% end %>

    <tr><tr style="background: #adff2f;">
     	<td>Sum:</td>
      <td><%= total_price %> Rub</td>    
      <td><%= total_qty %></td>
 	 </tr>

  </tbody>
</table>